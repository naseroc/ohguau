<p id="notice"><%= notice %></p>

<h1>Perritos Disponibles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ciudad o Comuna</th>
      <th>Genero</th>
      <th>Raza</th>
      <th>Edad</th>
      <th>Tamaño</th>
      <th>Siguiente Periodo</th>
      <th>Descripción</th>
      <th>Foto</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.city.name %></td>
        <td><%= dog.sex %></td>
        <td><%= dog.breed.name %></td>
        <td><%= dog.age.name %></td>
        <td><%= dog.size %></td>
        <td><%= dog.nextperiod %></td>
        <td><%= dog.description %></td>
        <td><%= image_tag(dog.photo, size:"80") %></td>
        <!-- <td><%= dog.user %></td> -->
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

