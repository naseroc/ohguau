<div class="row">
<div class="col-md-2">
  <p id="notice"><%= notice %></p>

<h3>Cambia de perro<h3>
    <% @mydogs.each do |dog| %>
    <% if dog != @mydog %>
    <a href="<%= tomatch_path(dog)%>" title="Emparejar"> 
        <%= dog.name %>
        <%= image_tag(dog.photo, :class =>'img-responsive', size:'40')%>
        </a>
    <% end %>   
    <% end %>
</div>
<div class="col-md-10">
<h1>Buscando pareja a <%= @mydog.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ciudad o Comuna</th>
      <th>Genero</th>
      <th>Raza</th>
      <th>Edad</th>
      <th>Tamaño</th>
      <th>Siguiente Periodo</th>
      <th>Descripción</th>
      <th>Foto</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
       <tr>
        <td><%= @mydog.name %></td>
        <td><%= @mydog.city.name %></td>
        <td><%= @mydog.sex %></td>
        <td><%= @mydog.breed.name %></td>
        <td><%= @mydog.age.name %></td>
        <td><%= @mydog.size %></td>
        <td><%= @mydog.nextperiod %></td>
        <td><%= @mydog.description %></td>
        <td><%= image_tag(@mydog.photo, size:"80") %></td>
        
      </tr>
  </tbody>
</table>
</div>